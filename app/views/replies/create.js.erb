<% if @reply.errors.blank? %>
<% @page = 1 %>
  if($("#replies").length == 0){
    Turbolinks.visit(location.href);
  }
  else {
    $("#replies .items").append('<%= j(render("reply", :reply => @reply, :reply_counter => @slide.replies_count - 1, :display_edit => true)) %>')
    $("a[href='#replies'] b").text('<%= @slide.replies_count %>');
    $("#replies .reply a.edit:last").css("display","inline-block");
    Slides.replyCallback(1,'<%= j(@msg) %>');
  }
<% else %>
  Slides.replyCallback(0,'<%= j(@msg) %>');
<% end %>
