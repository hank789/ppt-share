<div class="sidebar">
  <tr>
    <td>
      <div class="box" style="text-align:center;"><%= user_avatar_tag(@user, :big, :link => false) %></div>
    </td>
    <td>&nbsp;</td>
    <td style="vertical-align: top;">
      <div style="text-align:center;"><%= render_user_level_tag(@user) %>
        &nbsp;&nbsp;&nbsp;<%= user_follow_tag(@user) %>
        &nbsp;&nbsp;
        <% if admin? %>
            <%= link_to "后台修改", edit_cpanel_user_path(@user), class: 'btn btn-sm btn-default' %>
        <% end %>
      </div>
    </td>
    </tr>

  <hr>

  <table class="userinfo vcard">
    <tr>
      <td><label>ID:</label></td>
      <td><strong class="fn"><%= @user.login %></strong></td>
    </tr>

    <% if !@user.name.blank? %>
        <tr>
          <td><label><%= t("mongoid.attributes.user.name") %>:</label></td>
          <td><strong><%= @user.name %></strong></td>
        </tr>
    <% end %>

    <% if !@user.email.blank? && @user.email_public %>
        <tr>
          <td><label><%= t("mongoid.attributes.user.email") %>:</label></td>
          <td><span style="word-break:break-all;overflow:auto;"><%= auto_link @user.email %></span></td>
        </tr>
    <% end %>

    <% if !@user.location.blank? %>
        <tr class="adr">
          <td><label><%= t("users.city") %>:</label></td>
          <td><span class="region"><%= location_name_tag(@user.location) %></span></td>
        </tr>
    <% end %>

    <% if !@user.company.blank? %>
        <tr class="adr">
          <td><label><%= t("mongoid.attributes.user.company") %>:</label></td>
          <td><span class="org"><%= @user.company %></span></td>
        </tr>
    <% end %>

    <% if !@user.tagline.blank? %>
        <tr>
          <td><label><%= t("users.signature") %>:</label></td>
          <td><span><%= render_user_tagline(@user) %></span></td>
        </tr>
    <% end %>
  </table>
  <% if !@user.bio.blank? %>
  <div class="bio box">
    <p><%= auto_link(simple_format(@user.bio)) %></p>
  </div>
  <% end %>
  <hr>

  <table>
    <div>
      <div class="col-md-4" style="text-align:center;">
        <h3><%= @user.slides_count %></h3>
        <h6>上传数</h6>
      </div>

      <div class="col-md-4" style="text-align:center;">
        <h3><%= @user.follower_ids.count %></h3>
        <h6>关注数</h6>
      </div>

      <div class="col-md-4" style="text-align:center;">
        <h3><%= @user.followed_ids.count %></h3>
        <h6>粉丝数</h6>
      </div>
    </div>
  </table>

</div>
