<% slides.each do |slide| %>
<div class="item col-xs-4 draggable">
<div class="well">
	<h3><i class="fa fa-file"></i> <%= link_to(truncate(slide.title, :length => 100), slide_path(slide), :title => slide.title) %></h3>
	<%= render_cell :slides, :carousel, :attach_id => slide.slide %>
	<div class="meta">
		<span><i class="fa fa-user"></i> <%= slide.user.name if !slide.user.nil? %></span>
		<span class="pull-right"><i class="fa fa-download"></i><%#= link_to content_tag(:i, "", :class => 'icon-download'), download_slide_path(slide.id), method: 'post' %> <%= slide.downloads %></span>
		<span class="pull-right"><i class="fa fa-heart"></i> <%= slide.likes_count %></span>
		<span class="pull-right"><i class="fa fa-eye"></i> <%= slide.hits %></span>
	</div>
</div>
</div>
<% end %>
