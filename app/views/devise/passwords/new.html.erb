<%= render "shared/error_messages", :target => resource %>
<div class="auth-unit-top">
	<h3><%= t("users.recover_password") %></h3>
	<p><%= t("users.recover_password_message_alert") %></p>
</div>
<div class="auth-unit-inner">
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "tooltip-demo", :role => "form"}) do |f| %>
	<div class="form-group">
        <label class="email required control-label" for="user_email"><%= t("mongoid.attributes.user.email") %></label>
		<%= f.input_field :email, :class => 'form-control', placeholder: "email.example.com" %>
	</div>
	<button type="submit" class="btn btn-danger btn-block" id="message_trigger_ok"><%= t("users.recover_password") %></button>
<% end %>
</div>
<br>
<a class="btn btn-primary btn-block btn-lg" href="<%= new_session_path(resource_name) %>"><%= t("common.login") %></a>
<a class="btn btn-success btn-block btn-lg" href="<%= new_registration_path(resource_name) %>"><%= t("common.register") %></a>
