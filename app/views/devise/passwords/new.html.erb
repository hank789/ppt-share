<%= render "shared/error_messages", :target => resource %>
<div class="auth-unit-top">
	<h3>Recover Password</h3>
	<p>recover your password if you forgot it</p>
</div>
<div class="auth-unit-inner">
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "tooltip-demo", :role => "form"}) do |f| %>
	<div class="form-group">
		<%= f.label :email%>
		<%= f.input_field :email, :class => 'form-control', placeholder: "email.example.com" %>
	</div>
	<button type="submit" class="btn btn-danger btn-block" id="message_trigger_ok">Recover Password</button>
<% end %>
</div>
<br>
<a class="btn btn-primary btn-block btn-lg" href="<%= new_session_path(resource_name) %>"><strong>Login</strong> to your account</a>
<a class="btn btn-success btn-block btn-lg" href="<%= new_registration_path(resource_name) %>"><strong>Sign up</strong> for free</a>
