<%= cache(["notifications", notification]) do %>
    <tr id="<%= notification.anchor %>">
      <%= render :partial => "notifications/#{notification.class.name.underscore}", :locals => {:notification => notification} %>
      <td><small><nobr><%= timeago(notification.created_at)  %></nobr></small></td>
      <td class="last">
        <%= link_to t("common.delete"), notification_path(notification), :method => :delete, :remote => true, :class => 'label label-danger' %>
      </td>
    </tr>
<% end %>
