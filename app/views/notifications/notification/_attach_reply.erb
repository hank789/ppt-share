<%
  reply = notification.reply
  attach = reply.attach
  slide = attach.slide
  action_label = ""
  if !owner?(slide)
    action_label = "关注"
  end
%>
<td class="face">
  <%= user_avatar_tag(reply.user, :normal) %>
</td>
<td>
  <h3>
    <span class="user">
      <%= user_name_tag(reply.user) %>
    </span>
    回复了你<%= action_label %>的主题：
    <%= slide_title_tag(slide) %>
    <% if !notification.read? %>
      <span class="new label label-warning">新</span>
    <% end %>
  </h3>
  <%- if reply.present? -%>
    <div class="body md_body">
      <%= sanitize_reply reply.body_html %>
    </div>
  <%- end -%>
</td>
