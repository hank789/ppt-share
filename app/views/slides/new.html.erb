<%= render :partial => "users/menu" %>

<div class="listing-page-top tooltip-demo">
	    <div class="container">
					<h2>上传幻灯片，并填写相关信息
	        </h2>
	        <ul class="nav nav-tabs">
	            <li class="active">
	                <a href="#">
	                    <i class="fa fa-bars">
	                    </i>
	                  创建幻灯片项目
	                </a>
	            </li>
	        </ul>
	    </div>
		</div>

<!-- Begin page content -->
        <div class="listing-page">


            <div class="container">

                <div class="row">




                    <div class="col-md-6">

                        <div class="group section-wrap upper" id="upper">
                            <div class="wrap group">


                                <div class="section-2 group">
																	<%#= render_cell :slides, :carousel, :attach_id => @slide.slide %>
                                </div>
                                <!-- /.section-2 -->
                            </div>
                            <!-- /.wrap -->
                        </div>
                        <!-- /#upper -->
                    </div>





                    <div class="col-md-6">
                        <div class="panel panel-primary ">
                            <div class="panel-heading">
                                <h3 class="panel-title">对幻灯片发表评论</h3>
                            </div>
                            <div class="panel-body">

                                <div class="row">


                                    <div class="col-lg-12">
                                        <div class="media">
                                            <a class="pull-left" href="#">
																							<%= user_avatar_tag(current_user, :big) %> 
                                            </a>
                                            <div class="media-body">
																							<h4 class="media-heading"><%= current_user.name %> <small> 拥有<%= current_user.slides.count %>组幻灯片</small></h4>
                                                <h5><a href="">查看该上传者其它幻灯片</a></h5>
                                                <hr style="margin:8px auto">

                                                <span class="label label-primary">所属组织</span>

                                            </div>
                                        </div>

                                    </div>



                                </div>
