<div class="container">
  <div class="row">
    <div class="col-md-9 col-sm-8">
      <div class="right-sec">
        <div class="top">
          <%= render "node_info", node: @node %>
        </div>
        <div class="row">
          <%= render :partial => "slides/slide", :collection => @slides %>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="text-center">
    <div class="pagination">
      <%= will_paginate @slides, :inner_window => 2, container: false %>
    </div>
  </div>
  <hr>
</div>
