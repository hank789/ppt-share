<div class="row">
		<div class="col-xs-12">
			<h1 class="page-title txt-color-blueDark">
				<i class="icon-hdd"></i> 
				My Slides	
				<span>&gt; 
			 	<%= @slide.title %> 
				</span>
			</h1>
		</div>
	</div>

<%= content_for :styles do %>
  <% if !@slide.user.blank? and !@slide.user.google_profile_url.blank? %>
    <link rel="author" content="<%= @slide.user.google_profile_url %>" />
  <% end %>
<% end %>
<% content_for :scripts do %>
  <script type="text/javascript">
    Topics.replies_per_page = <%= @per_page %>;
    $(document).ready(function(){
      <% if admin? %>
        $("#replies .reply a.edit").css('display','inline-block');
      <% elsif current_user %>
        $("#replies .reply a.edit[data-uid='<%= current_user.id %>']").css('display','inline-block');
      <% end %>
      <% if current_user && !@user_liked_reply_ids.blank? %>
        Topics.checkRepliesLikeStatus([<%= @user_liked_reply_ids.join(",") %>]);
      <% end %>
    })
  </script>
<% end %>

<div class="row">
  <div id="slide_show" class="col-xs-12 slides hfeed">
    <div class="slide hentry well">
			<div class="row">
				<div class="col-xs-9">
					<%= render :partial => "slides/slide_info", :locals => { :slide => @slide} %> 
				</div>
				<div class="col-xs-3">	
					<ul class="common-hits">
						<li>
						<a class="btn btn-success btn-large" href="javascript:void(0);"><i class="icon-download-alt"></i> Download</a>
						</li>
						<li>
						<a class="btn" href="javascript:void(0);"><i class="icon-star"></i> Star</a>
						</li>
						<li>
						<a class="btn" href="javascript:void(0);"><i class="icon-copy"></i> Copy</a>
						</li>
						<li>
      				<%= social_share_button_tag h("#{@slide.title} via: @#{Setting.twitter_id} ") %>
						</li>
					</ul>
				</div>
    	</div>
      <div class="body entry-content">
        <%= sanitize_slide @slide.body_html %>
				<%= image_tag @slide.slide %>
      </div>

			</div>	
	<div>
<div class="row">
	<div class="col-xs-9">
  <% if @replies.blank? %>
    <div class="no_result">
      <%= t("topics.no_replies") %>
    </div>
    <% else %>
    <div id="replies" class="well">
      <div class="total">
        共收到 <b><%= @slide.replies_count %></b> 条回复
      </div>
      <div class="items">
        <%= cache([@topic,params[:page],"raw:#{@show_raw}"]) do %>
          <%= render :partial => "replies/reply", :collection => @replies %>
        <% end %>
      </div>
      <%= will_paginate @replies, :inner_window => 2, :params => { :anchor => 'replies' } %>
    </div>
  <% end %>

  <% if current_user %>
    <div id="reply" class="form well">
      <% if can? :create, Reply %>
        <%= render "editor_toolbar" %>
        <%= form_for(Reply.new, :remote => true,:url => slide_replies_path(@slide)) do |f| %>
          <%= f.text_area :body,:class => "topic_editor span10", :rows => "4", :tabindex => "1" %>
          <div class="submit_buttons">
            <button type="submit" id="btn_reply" class="btn btn-primary" tabindex="2"><%= t("slides.submit_reply")%></button><br />
            <span class="help-inline" title="或者 Command + Enter">Ctrl+Enter</span>
          </div>

          <span class="body helpblock">
						<%#= render_cell :slides, :reply_help_block %> 
          </span>
        <% end %>
      <% else %>
        <div class="alert alert-info">
          当前设置新手用户不能在 22:00 ~ 9:00 发帖。
        </div>
      <% end %>
    </div>
  <% else %>
      <%= render :partial => "topics/translation/need_login_to_reply" %>
  <% end %>
	</div>
</div>
