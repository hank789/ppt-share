<div id="upload_editor" class="panel panel-primary ">
	<div class="panel-heading"><h3 class="panel-title"><%= params[:action]=='edit'? "修改幻灯片项目信息" : "填写幻灯片项目信息" %></h3></div>
  <div class="panel-body">		
		<%= render "shared/error_messages", :target => @slide %>
		<%= simple_form_for @slide do |f| %>
			<%= f.input :slide, :as => :hidden %>
			<div class="form-group">
      	<label for="exampleInputEmail1">标题</label>
				<%= f.text_field :title, class:"form-control" %>
      </div>
      <label for="exampleInputEmail1">描述</label>
			<%= f.text_area :body,:class => "form-control", :rows => "10", :tabindex => "1" %>
			<br>
      <button type="submit" class="btn btn-success"><%= params[:action]=='edit'? "提交修改" : "创建" %></button>
		<% end %>
  </div>
</div>
