<% if !node.blank? %>
  <div>
    <h2><%= node.name %></h2>
    <span class="total">共有 <%= render_node_topics_count(node) %> 个讨论主题</span>
    <div class="feed">
      <%= link_to("#{content_tag(:span, "", :class => "icon share_icons_rss" )}".html_safe, feed_node_topics_url, :title => "#{node.name} Feed") %>
    </div>
  </div>
  <div class="desc">
    <%= simple_format(node.summary) %>
  </div>
<% else %>
	<ul class="nav nav-tabs tooltip-demo">
		<li<%= " class=active" if action_name == "index" %>><%= link_to "All listing", slides_path %></li>
		<li<%= " class=active" if action_name == "popular" %>><%= link_to raw("<i class='icon small_liked'></i> Most popular"), popular_slides_path, class:"popular" %></li>
		<li class="active pull-right"><a data-original-title="Grid View" title="" data-placement="top" data-toggle="tooltip" href="#"><span class="glyphicon glyphicon-th"></span></a></li>
	</ul>
<% end %>
