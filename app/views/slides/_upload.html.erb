<div id="upload_landing" class="jarviswidget">
<header role="heading">
	<span class="widget-icon"> <i class="icon-plus"></i> </span>
	<h2>上传Slide</h2>
</header>
<div role="content">
<div class="widget-body">
	<%= simple_form_for @slide, :html => { id:"uploadDropzone", :class => "dropzone" } do |f|  %>
	<% end %>
</div>
</div>
</div>
<script type="text/javascript">
$(function() {
	$('#upload_editor').hide();
	Dropzone.options.uploadDropzone = {
		//addRemoveLinks : true,
		maxFilesize: 20,
		maxFiles: 1,
		dictResponseError: 'Error uploading file!',
		init: function() {
			this.on("success", function(file, resp) {
				$('#slide_slide').val(resp);
				$('#upload_landing').hide();
				$('#upload_editor').show();
			});
		}
	};
})
</script>
