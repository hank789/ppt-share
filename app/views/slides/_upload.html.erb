<div id="upload_landing" class="group section-wrap upper" id="upper">
<div class="wrap group">
<div class="section-2 group">
	<%= simple_form_for @slide, :html => { id:"uploadDropzone", :class => "dropzone" } do |f|  %>
	<% end %>
<script type="text/javascript">
$(function() {
	$('#upload_editor').hide();
	Dropzone.options.uploadDropzone = {
		//addRemoveLinks : true,
		maxFilesize: 20,
		maxFiles: 1,
		acceptedFiles: ".ppt,.pptx,.pdf",
		dictResponseError: 'Error uploading file!',
		init: function() {
			this.on("success", function(file, resp) {
				if(resp)
					$('#slide_slide').val(resp);
				$('#upload_editor').show();
			});
		}
	};
})
</script>
</div>
</div>
</div>

