<% if current_user %>
    <ul class="nav pull-right" id="userbar">
      <li>
        <div class="btn-group" style="padding-right: 16px">
          <a class="btn btn-primary navbar-btn btn-sm" href="<%= new_slide_url %>"><i class="glyphicon glyphicon-cloud-upload"></i> <%= t("slides.upload_slide") %>
          </a>
        </div>
      </li>
      </li>
      <%
         badge_class = ""
         badge_class = "badge-error" if unread_notify_count > 0
      %>
      <li<%= " class=active" if ["notifications"].index(params[:controller]) %>>
        <a href="<%= notifications_path %>" id="user_notifications_count"><span class="<%= badge_class %>"><b class="glyphicon glyphicon-bell"></b> <%= unread_notify_count %></span></a>
      </li>
      <li class="dropdown" id="user_menu">
        <%= link_to(sanitize("<b class='glyphicon glyphicon-user'></b> #{current_user.login} <b class='caret'></b>"), "#user_menu", :class => "dropdown-toggle", "data-toggle" => "dropdown") %>
        <%= render_list :class => "dropdown-menu" do |li|
          unless params[:controller].match(/cpanel/)
            li << link_to(t("users.menu.activity_feed"), activity_user_path(current_user.login.downcase))
            #li << link_to(t("menu.my_workspace"), workspace_user_path(current_user.login.downcase))
            li << link_to(t("users.menu.slides"), user_path(current_user.login.downcase))
            li << link_to(t("users.menu.collections"), collections_user_path(current_user.login.downcase))
            li << link_to(t("menu.edit_account_path"), edit_user_registration_path)
            li << link_to(t("menu.cpanel"), "/cpanel") if admin?
          end
          li << link_to(t("common.logout"), destroy_user_session_path, method: "delete")
        end %>
      </li>
    </ul>
<% else %>
    <p class="navbar-text pull-right"><%= t("users.already_have_account") %> <%= link_to(t("common.login"), new_user_session_path, {:class => "navbar-link"}) %></p>
    <div class="btn-toolbar pull-right">
      <div class="btn-group">
        <a class="btn btn-success navbar-btn btn-sm" href="<%= new_user_registration_path %>"><span class="glyphicon glyphicon-user"></span><%= t("users.register_user") %>
        </a>
      </div>
    </div>
<% end %>
