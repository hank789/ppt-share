<% if current_user %> 
<div class="btn-header pull-right">
	<span class="pull-left">
		<%= link_to content_tag(:i, "", :class => "icon-plus"), new_slide_url %>
	</span>
	<span class="pull-left">
		<a id="activity" class="activity-dropdown" href="<%= notifications_path %>" id="user_notifications_count">
			<!-- <i class="icon-user"></i> -->
			<%= user_avatar_tag(current_user, :activity, :link => false) %>

			<b class="badge bounceIn animated"><%= unread_notify_count %></b>
		</a>
	</span>
<div id="userbar" class="dropdown">
	<span class="label">Login as:</span>
	<span id="userbar-selector" class="popover-trigger-element dropdown-toggle" data-toggle="dropdown">
		<%= current_user.login %>
  	<i class="icon-angle-down"></i>
	</span>
	<%= render_list :class => "dropdown-menu" do |li|
		li << link_to(content_tag(:i, "", :class => "icon-home") + " #{t("menu.my_home_page")}", user_path(current_user.login) )
		li << link_to(content_tag(:i, "", :class => "icon-folder-close") + " #{t("menu.my_folders")}", user_path(current_user.login))
    unless params[:controller].match(/cpanel/)
			li << ['', class: 'divider']
			li << link_to(content_tag(:i,"", :class => "icon-hdd") + " #{t("menu.uploads")}", slides_user_path(current_user.login))
			li << link_to(content_tag(:i,"", :class => "icon-bookmark") + " #{t("menu.collections")}", slides_user_path(current_user.login))
			li << link_to(content_tag(:i, "", :class => "icon-heart") + " #{t("menu.likes")}", favorites_user_path(current_user.login))
    end
			li << ['', class: 'divider']
      li << link_to(t("menu.cpanel"), "/cpanel") if admin?
      li << link_to(t("menu.edit_account_path"), edit_user_registration_path)
  	  li << link_to(t("common.logout"), destroy_user_session_path, method: "delete" )
  end %>

</div>
</div>
<% else %>
	<span id="login-header-space">
		<h4 class="hidden-mobile">
			<%= link_to( "还没有帐号？", new_user_registration_path) %>
		</h4> 
		<a class="btn btn-danger" href="<%= new_user_session_path %>">登录</a> 
	</span>

<% end %>
