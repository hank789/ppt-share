<aside id="left-panel">

<!-- User info -->
<div class="login-info">
				<span> <!-- User image size is adjusted inside CSS, it should stay as it --> 
					
					<a href="<%= user_path(current_user.login.downcase) %>">
                      <%= user_avatar_tag(current_user,30,:link => false,:class => "online") %>
						<span>
							<%= current_user.name %>
						</span>
                      <i class="fa fa-angle-down"></i>
                    </a>
					
				</span>
</div>
<!-- end user info -->

