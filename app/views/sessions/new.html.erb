<div class="auth-unit-top">
	<h3>Login</h3>
	<p>to access your account</p>
</div>
<div class="auth-unit-inner">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "tooltip-demo", :role => "form"}) do |f| %>
	<%= render "shared/error_messages", :target => resource %>
	<div class="form-group">
		<%= f.label :login %>
		<%= f.input_field :login, :class => 'form-control', placeholder: "email@example.com" %>
	</div>
	<div class="form-group">
		<label for="exampleInputPassword1">Password <%= link_to( "forgot?", new_password_path(resource_name), {class:"pull-right"} ) %></label>
		<%= f.input_field :password, :class => 'form-control', placeholder: "**********" %>
	</div>
<% if devise_mapping.rememberable? -%>
	<div class="checkbox">
		<label><%= f.check_box :remember_me, :style => "width:auto;" %>Remember Me</label>
	</div>
<% end %>
	<button type="submit" class="btn btn-primary btn-block" id="message_trigger_err"><strong>Login</strong> to your account</button>
<% end %>
</div>
<br>
<a class="btn btn-success btn-block btn-lg" href="<%= new_registration_path(resource_name) %>"><strong>Sign up</strong> for free</a>
