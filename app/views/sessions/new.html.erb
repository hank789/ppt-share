<div class="auth-unit-top">
	<h3><%= t("common.login") %></h3>
</div>
<div class="auth-unit-inner">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "tooltip-demo", :role => "form"}) do |f| %>
	<%= render "shared/error_messages", :target => resource %>
	<div class="form-group">
        <label class="string required control-label" for="user_login"><%= t("mongoid.attributes.user.login") %></label>
		<%= f.input_field :login, :class => 'form-control', placeholder: "email@example.com" %>
	</div>
	<div class="form-group">
		<label for="exampleInputPassword1"><%= t("mongoid.attributes.user.password") %> <%= link_to( t("users.forget_password"), new_password_path(resource_name), {class:"pull-right"} ) %></label>
		<%= f.input_field :password, :class => 'form-control', placeholder: "" %>
	</div>
<% if devise_mapping.rememberable? -%>
	<div class="checkbox">
		<label><%= f.check_box :remember_me, :style => "width:auto;" %><%= t("mongoid.attributes.user.remember_me") %></label>
	</div>
<% end %>
	<button type="submit" class="btn btn-primary btn-block" id="message_trigger_err"><strong><%= t("common.login") %></strong></button>
<% end %>
</div>
<br>
<a class="btn btn-success btn-block btn-lg" href="<%= new_registration_path(resource_name) %>"><%= t("users.sign_up_for_free") %></a>
