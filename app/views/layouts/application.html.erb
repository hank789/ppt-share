<!DOCTYPE html>
<html>
<head>
  <%= render_page_title %>
  <%= stylesheet_link_tag "front", "data-turbolinks-track" => true %>
  <%= yield :styles %>
  <% if mobile? %>
    <%= stylesheet_link_tag "mobile" %>
    <meta name="apple-mobile-web-app-capable" content="no">
    <meta content='True' name='HandheldFriendly' />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <link rel="apple-touch-icon-precomposed" href="<%= asset_path("ios-icon.png") %>" />
  <% end %>
  <meta name="keywords" content="<%= @meta_keywords %>" />
  <meta name="description" content="<%= @meta_description %>" />
  <meta charset='utf-8' />
  <link rel="shortcut icon" href="<%= asset_path("big_logo.png") %>" />
  <%= raw SiteConfig.custom_head_html %>
  <%= csrf_meta_tag %>
  <%= auto_discovery_link_tag(:rss,feed_topics_url,:title => '订阅最新帖') %>
  <%= javascript_include_tag "app", "data-turbolinks-track" => true %>
  <%= yield :node_feed_link %>
</head>
<body data-offset="50" data-controller-name="<%= controller_name %>" class="no-right-panel container" style="min-height: 800px;">  
	<header id="header">
		<div id="logo-group">
			<span id="logo">
				<a href="/" class="site-logo"></a>
			</span>
		</div>
		<div class="pull-right">
			<%= render "common/user_nav" %>
			<form class="header-search pull-right" action="search" method="get">
				<input type="text" name="q" value="<%= params[:q] %>" placeholder="<%= t("common.search") %>" />
				<button type="submit"><i class="icon-search"></i></button>
			</form>
		</div>
	</header>

      <%= yield %>

  <% if not mobile? %>
  <a class="go_top" href="#"><i class="icon icons_go_top"></i></a>
  <% end %>
  <% if mobile? %>
    <script type="text/javascript">
    app_mobile = true;
    $('body').animate({ scrollTop: -1 },0);
    </script>
  <% end %>
  <script type="text/javascript" data-turbolinks-eval=false>
    ROOT_URL = "<%= root_url %>";
    FAYE_SERVER_URL = "<%= Setting.faye_server %>";
    <% if current_user %>
      CURRENT_USER_ACCESS_TOKEN = "<%= current_user.temp_access_token %>";
    <% end %>
    if (FAYE_SERVER_URL) {
      App.initNotificationSubscribe();
    }
  </script>
  <%= yield :scripts %>
  <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= Setting.google_analytics_key %>']);
      _gaq.push(['_setSiteSpeedSampleRate', 100]);
      _gaq.push(['_trackPageview']);

      <%= Garelic::Timing %>

      (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  </script>
</body>
</html>
