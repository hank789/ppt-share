<!DOCTYPE html>
<html>
<head>
  <%= render_page_title %>
  <%= stylesheet_link_tag "front", "data-turbolinks-track" => true %>
  <%= yield :styles %>
  <meta charset="utf-8">
  <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->
  <meta name="keywords" content="<%= @meta_keywords %>"/>
  <meta name="description" content="<%= @meta_description %>"/>

  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <link rel="shortcut icon" href="<%= asset_path("big_logo.png") %>"/>
  <%= raw SiteConfig.custom_head_html %>
  <%= csrf_meta_tag %>
</head>
<body data-offset="50" data-controller-name="<%= controller_name %>" id="login" class="animated fadeInDown">

<!-- HEADER -->
<header id="header">
  <div id="logo-group">
    <!-- PLACE YOUR LOGO HERE -->
    <span id="logo"> <img src="img/logo.png" alt="SmartAdmin"> </span>
    </div>
    <!-- END AJAX-DROPDOWN -->
  </div>

  <span id="login-header-space"> <a href="<%= new_user_session_path %>" class="btn"><%= t("common.login") %></a> <a href="<%= new_user_registration_path %>" class="btn btn-danger"><%= t("common.register") %></a> </span>

</header>

<div id="main" role="main">

  <!-- MAIN CONTENT -->
  <div id="content" class="container">

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-7 col-lg-12 hidden-xs hidden-sm">
        <%= notice_message %>
        <%= yield %>

      </div>
    </div>
  </div>

</div>



<%= javascript_include_tag "front" %>
<%= yield :scripts %>
<script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', '<%= Setting.google_analytics_key %>']);
    _gaq.push(['_setSiteSpeedSampleRate', 100]);
    _gaq.push(['_trackPageview']);

    <%= Garelic::Timing %>

    (function () {
        var ga = document.createElement('script');
        ga.type = 'text/javascript';
        ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(ga, s);
    })();
</script>
</body>
</html>
